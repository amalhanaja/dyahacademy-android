<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_item_course_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_white_xl"
    android:elevation="@dimen/elevation_1">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_item_course"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/spacing_6"
        android:layout_marginTop="@dimen/spacing_6"
        android:layout_marginBottom="@dimen/spacing_6"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_item_course_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_4"
        android:layout_marginEnd="@dimen/spacing_6"
        android:letterSpacing=".0125"
        android:textColor="@color/jet"
        android:textSize="@dimen/font_size_xl"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/actv_item_course_owner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/siv_item_course"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Course 1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_item_course_owner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_1"
        android:textColor="@color/outerSpace"
        android:textSize="@dimen/font_size_sm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/actv_item_course_title"
        app:layout_constraintStart_toStartOf="@id/actv_item_course_title"
        app:layout_constraintTop_toBottomOf="@+id/actv_item_course_title"
        tools:text="Oleh: Alfian Akmal Hanantio" />

</androidx.constraintlayout.widget.ConstraintLayout>