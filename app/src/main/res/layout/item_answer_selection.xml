<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_item_answer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_white_xl"
    android:elevation="@dimen/elevation_1">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_item_answer_selection_mark"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_4"
        android:paddingEnd="@dimen/spacing_4"
        android:textColor="@color/jet"
        android:textSize="@dimen/font_size_3xl"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/shape_round_white_xl"
        tools:backgroundTint="@color/coral"
        tools:text="A"
        tools:textColor="@color/white" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_item_answer_selection_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_2"
        android:layout_marginTop="@dimen/spacing_3"
        android:layout_marginEnd="@dimen/spacing_2"
        android:layout_marginBottom="@dimen/spacing_3"
        android:textColor="@color/jet"
        android:textSize="@dimen/font_size_base"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mtv_item_answer_selection_mark"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Answer 1" />
</androidx.constraintlayout.widget.ConstraintLayout>
