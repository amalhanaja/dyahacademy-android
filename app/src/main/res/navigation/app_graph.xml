<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_graph"
    app:startDestination="@id/courseListFragment">

    <fragment
        android:id="@+id/courseListFragment"
        android:name="com.amalcodes.dyahacademy.android.features.course.CourseListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_course_list">
        <action
            android:id="@+id/action_courseListFragment_to_courseDetailFragment"
            app:destination="@id/courseDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/courseDetailFragment"
        android:name="com.amalcodes.dyahacademy.android.features.course.CourseDetailFragment"
        android:label="fragment_course_detail"
        tools:layout="@layout/fragment_course_detail">
        <argument
            android:name="courseId"
            app:argType="string" />
        <argument
            android:name="label"
            app:argType="string" />
        <argument
            android:name="subtitle"
            app:argType="string" />
        <action
            android:id="@+id/action_courseDetailFragment_to_topicDetailFragment"
            app:destination="@id/topicDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/youtubeLessonFragment"
        android:name="com.amalcodes.dyahacademy.android.features.lesson.YoutubeLessonFragment"
        android:label="fragment_youtube_lesson"
        tools:layout="@layout/fragment_youtube_lesson">
        <argument
            android:name="youtubeUrl"
            app:argType="string" />
        <argument
            android:name="label"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.amalcodes.dyahacademy.android.features.quiz.QuizFragment"
        android:label="fragment_quiz"
        tools:layout="@layout/fragment_quiz">
        <argument
            android:name="label"
            app:argType="string" />
        <argument
            android:name="lessonId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/topicDetailFragment"
        android:name="com.amalcodes.dyahacademy.android.features.topic.TopicDetailFragment"
        android:label="fragment_topic_detail"
        tools:layout="@layout/fragment_topic_detail">
        <argument
            android:name="label"
            app:argType="string" />
        <argument
            android:name="topicId"
            app:argType="string" />
        <action
            android:id="@+id/action_topicDetailFragment_to_youtubeLessonFragment"
            app:destination="@id/youtubeLessonFragment" />
        <action
            android:id="@+id/action_topicDetailFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>
    <dialog
        android:id="@+id/confirmationDialogFragment"
        android:name="com.amalcodes.dyahacademy.android.component.ConfirmationDialogFragment"
        android:label="dialog_finish_quiz_confirmation"
        tools:layout="@layout/dialog_finish_quiz_confirmation" />
    <action
        android:id="@+id/action_global_confirmationDialogFragment"
        app:destination="@id/confirmationDialogFragment" />
</navigation>